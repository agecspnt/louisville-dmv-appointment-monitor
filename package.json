{
  "name": "dmv-appointment-monitor-electron",
  "version": "1.0.0",
  "description": "Desktop monitor for Kentucky DMV appointment availability (Electron + Playwright)",
  "main": "electron/main.js",
  "author": "DMV Appointment Monitor contributors",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "electron",
    "playwright",
    "dmv",
    "appointment-monitor",
    "desktop-app"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "test": "node --test",
    "test:live": "node --test tests/live.integration.test.js",
    "build:win": "npm test && electron-builder --publish never --win nsis portable",
    "build:mac": "npm test && electron-builder --publish never --mac dmg zip",
    "build:all": "node scripts/build-all.mjs"
  },
  "build": {
    "appId": "com.local.dmv.monitor",
    "productName": "DMV Appointment Monitor",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "config/entitlements.mac.plist",
      "entitlementsInherit": "config/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "dependencies": {
    "playwright": "^1.53.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "electron": "^37.2.6",
    "electron-builder": "^25.1.8"
  }
}
